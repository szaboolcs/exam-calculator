{
  "name": "school/leaving-exam-evaluator",
  "description": "School leaving exam result evaluator package.",
  "license": "proprietary",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,

  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.1.0"
    }
  },

  "require": {
    "php-di/php-di": "^7.0",
    "php": ">=8.1"
  },

  "require-dev": {
    "phpmd/phpmd": "^2.13",
    "phpunit/phpunit": "^10.1",
    "squizlabs/php_codesniffer": "^3.0"
  },

  "autoload": {
    "psr-4": {
      "School\\LeavingExamEvaluator\\": "src/LeavingExamEvaluator"
    }
  },

  "scripts": {
    "code-sniffer": "./vendor/bin/phpcs -p --standard=PSR12 src",
    "phpunit": "./vendor/bin/phpunit -c phpunit.xml",
    "phpmd": "./vendor/bin/phpmd Api text cleancode,codesize,controversial,design,unusedcode"
  }
}
